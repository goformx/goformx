# GoFormX Production Environment Configuration
# Copy this file to .env and update the values for your environment

# Docker Configuration
DOCKER_REGISTRY=goformx
IMAGE_TAG=latest

# Database Configuration
# Use a full DSN for external database or individual components for containerized database
POSTGRES_DSN=postgres://username:password@localhost:5432/goforms?sslmode=disable

# For containerized PostgreSQL (if using the full docker-compose.yml with database)
# POSTGRES_DB=goforms
# POSTGRES_USER=goforms
# POSTGRES_PASSWORD=your-secure-password

# Security Configuration
# REQUIRED: generate with openssl rand -hex 32
SESSION_SECRET=
CSRF_SECRET=

# CORS Configuration
CORS_ORIGINS=https://goforms.example.com,https://www.goforms.example.com

# Redis Configuration (if using Redis for sessions/caching)
# REDIS_PASSWORD=your-redis-password

# Application Configuration
APP_NAME=GoFormX
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Server Configuration
APP_SCHEME=http
APP_HOST=0.0.0.0
APP_PORT=8090

# Vite Development Server Configuration
VITE_DEV_HOST=localhost
VITE_DEV_PORT=5173

# Database Configuration
DB_CONNECTION=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=goforms
DB_USERNAME=goforms
DB_PASSWORD=goforms
DB_ROOT_PASSWORD=root_password

# Security Configuration
# REQUIRED: generate with openssl rand -hex 32 (must match values above)
SESSION_SECRET=
SECURITY_CSRF_SECRET=
SECURITY_SECURE_COOKIE=false

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Default User Configuration
USER_EMAIL=user@example.com
USER_PASSWORD=user_password
USER_FIRST_NAME=Default
USER_LAST_NAME=User

# Database Connection Settings
# DB_CONNECTION=postgres
# DB_MAX_OPEN=25
# DB_MAX_IDLE=5
# DB_TIMEOUT=5

# Security Settings
# SECURE_COOKIES=true

# CORS Settings
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
# CORS_ALLOW_CREDENTIALS=true
# CORS_MAX_AGE=3600

# Timeout Settings
# READ_TIMEOUT=5s
# WRITE_TIMEOUT=10s
# IDLE_TIMEOUT=120s
# REQUEST_TIMEOUT=30s
# Development CSP Configuration
SECURITY_CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval' http://localhost:5173 https://localhost:5173"
SECURITY_CSP_STYLE_SRC="'self' 'unsafe-inline' http://localhost:5173 https://localhost:5173"
SECURITY_CSP_CONNECT_SRC="'self' ws: wss: http://localhost:5173 https://localhost:5173"
SECURITY_CSP_FONT_SRC="'self' http://localhost:5173 https://localhost:5173"
SECURITY_CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:40895,http://127.0.0.1:5173,http://127.0.0.1:40895"
APP_LOG_LEVEL=debug
DB_LOGGING_LOG_LEVEL=info
DB_LOGGING_SLOW_THRESHOLD=100ms
DB_LOGGING_PARAMETERIZED=true

# Database Connection Settings
DB_DRIVER=postgres
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Security Settings
SECURE_COOKIES=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8090
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Laravel assertion auth (shared secret for signed X-User-Id / X-Signature; set same in Laravel .env)
GOFORMS_SHARED_SECRET=

# API Key Configuration
API_KEY_ENABLED=false
API_KEYS=
API_KEY_HEADER_NAME=X-API-Key

# Timeout Settings
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
REQUEST_TIMEOUT=60s

