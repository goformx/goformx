# GoFormX Production Environment Configuration
# Copy this file to .env and update the values for your environment

# Docker Configuration
DOCKER_REGISTRY=goformx
IMAGE_TAG=latest

# Database Configuration
# Use a full DSN for external database or individual components for containerized database
POSTGRES_DSN=postgres://username:password@localhost:5432/goforms?sslmode=disable

# For containerized PostgreSQL (if using the full docker-compose.yml with database)
# POSTGRES_DB=goforms
# POSTGRES_USER=goforms
# POSTGRES_PASSWORD=your-secure-password

# Security Configuration
# Generate secure secrets using: openssl rand -hex 32
SESSION_SECRET=your-32-character-session-secret-here
CSRF_SECRET=your-32-character-csrf-secret-here

# CORS Configuration
CORS_ORIGINS=https://goforms.example.com,https://www.goforms.example.com

# Redis Configuration (if using Redis for sessions/caching)
# REDIS_PASSWORD=your-redis-password

# Application Configuration
APP_NAME=GoFormX
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Server Configuration
APP_SCHEME=http
APP_HOST=localhost
APP_PORT=8090

# Vite Development Server Configuration
VITE_DEV_HOST=localhost
VITE_DEV_PORT=5173

# Database Configuration
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=goforms
DB_USERNAME=goforms
DB_PASSWORD=goforms_password

# Security Configuration
SESSION_SECRET=your-32-character-session-secret-here
SECURITY_CSRF_SECRET=your-32-character-csrf-secret-here
SECURITY_SECURE_COOKIE=false

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Default User Configuration
USER_EMAIL=user@example.com
USER_PASSWORD=user_password
USER_FIRST_NAME=Default
USER_LAST_NAME=User

# Database Connection Settings
# DB_CONNECTION=postgres
# DB_MAX_OPEN=25
# DB_MAX_IDLE=5
# DB_TIMEOUT=5

# Security Settings
# SECURE_COOKIES=true

# CORS Settings
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
# CORS_ALLOW_CREDENTIALS=true
# CORS_MAX_AGE=3600

# Timeout Settings
# READ_TIMEOUT=5s
# WRITE_TIMEOUT=10s
# IDLE_TIMEOUT=120s
# REQUEST_TIMEOUT=30s
